<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_small"
    android:gravity="center_horizontal">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_gift_icon"
        android:layout_width="@dimen/item_gift_icon_size"
        android:layout_height="@dimen/item_gift_icon_size"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="300"
        fresco:placeholderImage="@drawable/ic_default_head"
        fresco:placeholderImageScaleType="fitCenter"
        />
    <ImageView
        android:id="@+id/item_gift_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_micro"
        android:src="@drawable/icon_continue_gift" />
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/item_gift_tv_margin"
        android:layout_marginBottom="@dimen/item_gift_tv_margin"
        >
    <TextView
        android:id="@+id/item_gift_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234"
        android:textSize="@dimen/text_size_md_smallest"
        android:textColor="@color/colorPrimary"
        android:singleLine="true"
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gift_diamond"
            />
        </LinearLayout>
    <TextView
        android:id="@+id/item_gift_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_md_smallest"
        android:textColor="@color/white"
        android:text="1234"
        android:visibility="gone"
        />
</LinearLayout>